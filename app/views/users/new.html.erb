<div class="row">
	<div class="col-xs-3">
		<img class="bt-sign-up-img" src="https://s3-us-west-1.amazonaws.com/beat-tree-images/bt-logo.gif">
	</div>
	<div class="col-xs-9 sign-up-explore">
		<h1>Sign Up.  Explore.  Contribute.</h1>
	</div>
</div>
<hr>
<div class="row">
	<div class="col-xs-4 col-xs-offset-4">
	<form class="new-user-data" action="/users" method="POST">
		<input type="hidden" value="authenticity-token">
		<div class="form-group">
			<label for="username-field">Username*</label>
			<input type="text" id="username-field" class="form-control" name="user[username]">

		</div>
		<div class="form-group">
			<label for="email-field">Email</label>
			<input type="email" class="form-control" id="email-field" name="user[email]">
		</div>
		<div class="form-group">
			<label for="first-name-field">First Name</label>
			<input type="text" class="form-control" id="first-name-field" name="user[fname]">
		</div>
		<div class="form-group">
			<label for="last-name-field">Last Name</label>
			<input type="text" class="form-control" id="last-name-field" name="user[lname]">
		</div>
		<div class="form-group">
			<label for="img-url-field">User Image URL (Square images 270 X 270 px are best!)</label>
			<input type="text" class="form-control" id="img-url-field" name="user[img_url]">
		</div>
		<div class="form-group">
			<label for="location-field">Location</label>
			<input type="text" class="form-control" id="location-field" name="user[location]">
		</div>
		<div class="form-group">
			<label for="password-field">Password*</label>
			<input type="password" class="form-control" id="password-field" name="user[password]">
		</div>
		<div class="form-group">
			<label for="confirm-password-field">Confirm Password*</label>
			<input type="password" class="form-control" id="confirm-password-field" name="user[password_confirmation]">
		</div>
		<div class="form-group">
			<input type="submit" class="form-control sign-up-btn" value="Sign Up">
		</div>
	</form>
	</div>
</div>
